<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailActivity"
    android:layout_margin="5dp">

        <Button
            android:id="@+id/btnBackEmailID"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/appbar"
            android:text="@string/btnBackSting"/>

        <TextView
            android:id="@+id/txtView_emailTitleID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnBackEmailID"
            android:textSize="35sp"
            android:text="@string/txtView_emailTitleString"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtView_emailSenderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtView_emailTitleID"
            android:textSize="20sp"
            android:text="@string/txtView_emailSenderString"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/txtView_dateTImeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txtView_emailSenderID"
            android:layout_below="@id/txtView_emailTitleID"/>

        <TextView
            android:id="@+id/txtView_emailReceiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtView_emailSenderID"
            android:layout_marginLeft="25dp"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/txtView_emailContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtView_emailReceiver"
            android:textSize="21sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="@string/txtView_emailContentString" />

</RelativeLayout>