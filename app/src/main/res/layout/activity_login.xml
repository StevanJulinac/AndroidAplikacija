<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/txt_view_user"
        android:text="@string/text_view_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/edit_text_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_txt_user"
        android:inputType="text"
        android:textSize="20sp"
        android:layout_toEndOf="@id/txt_view_user"/>

    <TextView
        android:id="@+id/txt_view_pass"
        android:text="@string/text_view_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_margin="5dp"
        android:layout_below="@id/txt_view_user"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_txt_pass"
        android:inputType="text"
        android:textSize="20sp"
        android:layout_toEndOf="@id/txt_view_pass"
        android:layout_below="@id/edit_text_user"/>

    <Button
        android:id="@+id/btnStartEmailsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="@string/btnText_login"
        android:layout_centerInParent="true"/>
</RelativeLayout>