<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidaplikacija">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ContactActivity"
            android:label="@string/title_activity_contact"
            android:launchMode="singleTask"/>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:launchMode="singleTask"/>
        <activity
            android:name=".CreateContactActivity"
            android:label="@string/title_activity_createContact"
            android:launchMode="singleTask"/>
        <activity
            android:name=".ContactsActivity"
            android:label="@string/title_activity_contacts"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"/>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:launchMode="singleTask"/>
        <activity
            android:name=".EmailActivity"
            android:label="@string/title_activity_email"
            android:launchMode="singleTask"/>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EmailsActivity"
            android:label="@string/title_activity_emails"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"/>
        <activity
            android:name=".CreateFolderActivity"
            android:label="@string/title_activity_createFolder"
            android:launchMode="singleTask"/>
        <activity
            android:name=".CreateEmailActivity"
            android:label="@string/title_activity_createEmail"
            android:launchMode="singleTask"/>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:launchMode="singleTask"/>
        <activity
            android:name=".FolderActivity"
            android:label="@string/title_activity_folder"
            android:launchMode="singleTask"/>
        <activity
            android:name=".FoldersActivity"
            android:label="@string/title_activity_folders"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"/>

    </application>

</manifest>